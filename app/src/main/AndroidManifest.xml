<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.ri0arjuna.resepmamiapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.main.MainActivity"
            android:configChanges="orientation|screenSize|navigation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SearchActivity"
            android:configChanges="orientation|screenSize|navigation"
            android:label="Search"
            android:parentActivityName=".activity.main.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.DetailMakananActivity"
            android:configChanges="orientation|screenSize|navigation"
            android:label="@string/title_activity_detail_makanan"
            android:parentActivityName=".activity.main.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FavoriteActivity"
            android:configChanges="orientation|screenSize|navigation"
            android:label="Foodvorite"
            android:parentActivityName=".activity.main.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.TopFoodActivity"
            android:configChanges="orientation|screenSize|navigation"
            android:label="Top Food"
            android:parentActivityName=".activity.main.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.InfoActivity"
            android:label="Info Apps"
            android:theme="@style/AboutPage" />
    </application>
</manifest>